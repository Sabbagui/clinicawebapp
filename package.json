{
  "name": "gynecology-practice-app",
  "version": "1.0.0",
  "description": "Practice management system for gynecology clinic",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run start:dev",
    "guard": "node scripts/check-no-env.js",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint:check",
    "lint:backend": "cd backend && npm run lint:check",
    "typecheck": "npm run typecheck:frontend && npm run typecheck:backend",
    "typecheck:frontend": "cd frontend && npm run type-check",
    "typecheck:backend": "cd backend && npm run type-check",
    "test": "npm run test:backend",
    "test:backend": "cd backend && npm run test",
    "format": "npx prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "pg": "^8.18.0"
  }
}
