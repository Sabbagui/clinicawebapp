# Internal production (Docker Compose v1 / docker-compose)
# Copy to `.env` and replace placeholders before running:
# docker-compose -f docker-compose.prod.yml up -d --build

POSTGRES_USER=app_user
POSTGRES_PASSWORD=CHANGE_ME_TO_A_LONG_RANDOM_PASSWORD
POSTGRES_DB=gynecology_practice

# Internal Docker network hostname (`postgres`) is used by the backend container.
DATABASE_URL=postgresql://app_user:CHANGE_ME_TO_A_LONG_RANDOM_PASSWORD@postgres:5432/gynecology_practice?schema=public

JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_JWT_SECRET

# Host port published for the frontend (the only app port exposed by default).
FRONTEND_PORT=3000

# Kept for flexibility; backend is NOT published by default in docker-compose.prod.yml.
BACKEND_PORT=3001

# Frontend/Next uses this for SSR + rewrite destination. Keep internal when backend is not published.
# If you decide to publish backend on the Tailscale IP later, use: http://100.74.93.53:3001
NEXT_PUBLIC_API_URL=http://backend:3001

# Optional admin vars (used only when enabling pgadmin via docker-compose.prod.admin.v1.yml).
PGADMIN_DEFAULT_EMAIL=admin@example.local
PGADMIN_DEFAULT_PASSWORD=CHANGE_ME_TO_A_LONG_RANDOM_PGADMIN_PASSWORD

